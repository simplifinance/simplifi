
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDirs": ["arch/test"],
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false
  },
  "include": ["./typechain", "arch/test", "./deploy", "./types"],
  "exclude": ["./node_modules/*"],
  "files": ["./hardhat.config.ts"]
}

